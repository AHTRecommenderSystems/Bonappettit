.menu.container.text-center.centered
  .col-xs-6.col-xs-offset-3
    .row
      .text-center
        ul.nav.nav-tabs
          li(role="presentation" ng-class="{active: signup.signup}")
            a.color_menu(ui-sref="signup") Registrarse
          li(role="presentation" ng-class="{active: login.login}")
            a.color_menu(ui-sref="login") Inicio de sesión
    .row
      .panel.panel-default(ng-if="signup.signup")
        .panel-body
          form.form
            .col-xs-6.pull-left
              input.separation_top.separation.form-control(type="text" ng-model="signup.name" placeholder="Nombre(s)")
            .col-xs-6.pull-right
              input.separation_top.separation.form-control(type="text" ng-model="signup.lastname" placeholder="Apellido(s)")
            .col-xs-12
              input.separation.form-control(type="email" ng-model="signup.name" placeholder="Correo electrónico")
            .col-xs-12
              input.separation.form-control(type="password" placeholder="Contraseña")
            .col-xs-12
              .input-group.pull-left.col-xs-6
                input.form-control(type='text', uib-datepicker-popup='{{signup.format}}', ng-model='signup.dt', is-open='signup.popup1.opened', datepicker-options='signup.dateOptions', ng-required='true', close-text='signup.Close', alt-input-formats='signup.altInputFormats')
                span.input-group-btn
                  button.btn.btn-default(type='button', ng-click='signup.open1()')
                    i.glyphicon.glyphicon-calendar
              .btn-group.pull-right.col-xs-6(uib-dropdown='', keyboard-nav='')
                button.dropdown_menu_size.separation#simple-btn-keyboard-nav.btn.btn-default(type='button', uib-dropdown-toggle='')
                  | Nacionalidad
                  span.caret
                ul.dropdown-menu(uib-dropdown-menu='', role='menu', aria-labelledby='simple-btn-keyboard-nav')
                  li.texto(role='menuitem') Argentina
                  li.texto(role='menuitem') Alemania
                  li.texto(role='menuitem') Brasil
                  li.texto(role='menuitem') Colombia
                  li.texto(role='menuitem') China
                  li.texto(role='menuitem') Francia
                  li.texto(role='menuitem') Holanda
                  li.texto(role='menuitem') Italia
                  li.texto(role='menuitem') México
                  li.texto(role='menuitem') España
                  li.texto(role='menuitem') Otro
            .col-xs-12
              input.texto_boton.color_boton.separation_down.button_height.btn.col-xs-12(type="submit" value="Registrarse")
      .panel.panel-default(ng-if="login.login")
        .panel-body(ng-class="{ 'has-error': form.username.$dirty && form.username.$error.required }")
          form.form(ng-submit="login.authenticate()" role="form" name="form")
            .col-xs-12
              input.separation_top.separation.form-control(name="email_login" id="email_login" type="email" ng-model="login.email" placeholder="Correo electrónico")
              span(ng-show="form.email_login.$dirty && form.email_login.$error.required" class="help-block") El correo electrónico es necesario
            .col-xs-12
              input.separation.form-control(name="password_login" id="password_login" type="password" ng-model="login.password" placeholder="Contraseña")
              span(ng-show="form.password_login.$dirty && form.password_login.$error.required" class="help-block") La contraseña es necesaria
            .col-xs-12
              input.texto_boton.button_height.separation_down.color_boton.btn.col-xs-12(type="submit" value="Iniciar Sesión")
