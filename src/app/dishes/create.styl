#createDish
  input[type=checkbox] {
    display:none;
  }
     
  input[type=checkbox] + label{
    background: #999;
    height: 42px;
    width: 42px;
    display:inline-block;
    padding: 0 0 0 0px;
  }
  
  input[type=checkbox]:checked + label {
    background: #0080FF;
    height: 42px;
    width: 42px;
    display:inline-block;
    padding: 0 0 0 0px;
  }