.container#info-dish
  .col-xs-12
    .row.sepatarion
      .col-xs-7#picture
        img(src="{{'assets/images/platillos/' + dishInfo.dish.picture || 'data:image/svg+xml;base64,'}}", alt='...')
      .col-xs-5

        h1 {{dishInfo.dish.name}}
        p {{dishInfo.dish.description}}
        | Rating:   
        uib-rating(ng-model="dishInfo.dish.averageRating" max="5" read-only="isReadonly" on-hover="dishInfo.hoveringOver(value)" on-leave="overStar = null" titles="['one','two','three']" aria-labelledby="default-rating" ng-click="dishInfo.rateDish()")
        h2 Categorias
        ul
          li.category_color(ng-repeat="n in dishInfo.dish.characteristics") {{n.name}}
    h3.sepatarion_2 Platillos relacionados
    img(ng-if="!dishInfo.recommendations" src="assets/images/loading.gif")
    .row.section.related_dishes
      .col-xs-6.col-md-3.related-item(ng-repeat="i in dishInfo.recommendations")
        a.thumbnail(ui-sref="dishInfo({id: i.id})")
          img(src="{{'assets/images/platillos/' + i.picture || 'data:image/svg+xml;base64,'}}", alt='...')
          p.text-center.dish_name {{i.name}}
        uib-rating.rating(ng-model="i.averageRating" max="5" read-only="true" on-leave="overStar = null" titles="['one','two','three']" aria-labelledby="default-rating")
